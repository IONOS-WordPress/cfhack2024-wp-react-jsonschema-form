{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "cfhack2024-wp-react-jsonschema-form/gutenberg-block-attributes-jsonschema",
	"version": "1.0.0",
	"title": "gutenberg-block-attributes-jsonschema",
	"category": "cfhack2024-wp-react-jsonschema-form",
	"icon": "smiley",
	"description": "WordPress block rendering its attributes form using react-jsonschema-form into the inspector panel of Gutenberg",
	"example": {
    "attributes" : {
      "json" : null
    }
  },
	"supports": {
		"html": false
	},
  "attributes": {
    "json": {
      "type": "object",
      "default": {
        "preface": "Contact me",
        "name": "This is me",
        "email": "me@example.com",
        "capitalize": true
      }
    }
  },
	"textdomain": "gutenberg-block-attributes-jsonschema",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js",
  "jsonschema": {
    "title": "Email contact",
    "description": "Edit email contact.",
    "type": "object",
    "required": [
      "email"
    ],
    "properties": {
      "preface": {
        "type": "string",
        "title": "Some text rendered before the eMail address link",
        "default": "Contact me!"
      },
      "email": {
        "type": "string",
        "title": "eMail address",
        "format": "email"
      },
      "capitalize": {
        "type": "boolean",
        "title": "Capitalize the email address",
        "default": true
      }
    }
  },
  "jsonschema-ui" : {
    "preface": {
      "ui:widget": "textarea",
      "ui:autofocus": true,
      "ui:placeholder": "The caption of the eMail address section",
      "ui:enableMarkdownInDescription": true,
      "ui:description": "Make text **bold** or *italic*. Take a look at other options [here](https://markdown-to-jsx.quantizor.dev/)."
    },
    "email": {
      "ui:options": {
        "inputType": "email"
      }
    }
  }
}
