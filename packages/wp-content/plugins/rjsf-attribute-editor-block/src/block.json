{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "cfhack2024-wp-react-jsonschema-form/rjsf-attribute-editor-block",
	"version": "1.0.0",
	"title": "rjsf-attribute-editor-block",
	"category": "cfhack2024-wp-react-jsonschema-form",
	"icon": "smiley",
	"description": "WordPress block rendering its attributes form using react-jsonschema-form into the inspector panel of Gutenberg",
	"example": {
    "attributes" : {
      "json" : {
        "foregroundColor": "blue",
        "backgroundColor": "lightgrey",
        "capitalize": false,
        "decoration": "underline"
      },
      "content" : "Hello world !"
    }
  },
  "attributes": {
    "content": {
      "type": "rich-text",
      "source": "rich-text",
      "selector": "p",
			"__experimentalRole": "content"
    },
    "json": {
      "type": "object",
      "default": {
        "foregroundColor": "#ffffff",
        "backgroundColor": "#000000",
        "capitalize": false,
        "decoration": "none"
      }
    }
  },
	"textdomain": "rjsf-attribute-editor-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js",
  "jsonSchema": {
    "type": "object",
    "required": ["decoration"],
    "properties": {
      "foregroundColor": {
        "type": "string",
        "title": "Foreground",
        "description": "Foreground color of the block"
      },
      "backgroundColor": {
        "type": "string",
        "title": "Background",
        "description": "Background color of the block"
      },
      "capitalize": {
        "type": "boolean",
        "title": "Capitalize the text",
        "default": false
      },
      "decoration": {
        "type": "string",
        "enum": [ "none", "overline", "line-through", "underline" ],
        "default": [ "none"]
      }
    }
  },
  "jsonSchemaUi" : {
    "ui:options" : {
      "submitButtonOptions" : {
        "norender" : true
      }
    }, "foregroundColor": {
      "inputType": "color"
    },
    "backgroundColor": {
      "inputType": "color"
    }
  }
}
